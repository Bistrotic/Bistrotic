<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
	</PropertyGroup>
	<PropertyGroup>
		<RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
		<RunAnalyzersDuringLiveAnalysis>false</RunAnalyzersDuringLiveAnalysis>
		<RunAnalyzers>false</RunAnalyzers>
		<PackageScribanIncludeSource>true</PackageScribanIncludeSource>
		<NoWarn>$(NoWarn);CA1304;CA1305;CA1307;CA1308;CA1309;CA1310;CA1801;CA1805;CA1822;CA1834;CA2208</NoWarn>
		<RootNamespace>Bistrotic.Infrastructure.CodeGeneration</RootNamespace>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.9.0" />
		<PackageReference Include="Scriban" Version="$(ScribanVersion)" IncludeAssets="Build" />
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	</ItemGroup>
	<ItemGroup>
		<AdditionalFiles Include="../Bistrotic.Infrastructure.CodeGeneration.Shared/AnalyzerReleases.Shipped.md" />
		<AdditionalFiles Include="../Bistrotic.Infrastructure.CodeGeneration.Shared/AnalyzerReleases.Unshipped.md" />
	</ItemGroup>
	<Import Project="..\Bistrotic.Infrastructure.CodeGeneration.Shared\Bistrotic.Infrastructure.CodeGeneration.Shared.projitems" Label="Shared" />
</Project>