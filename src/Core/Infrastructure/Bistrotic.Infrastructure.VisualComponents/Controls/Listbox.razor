@if (ThemeName.Equals("Fast"))
{
    <fast-listbox @attributes="AdditionalAttributes">@ChildContent</fast-listbox>
}
else if (ThemeName.Equals("Fluent")) 
{
    <fluent-listbox @attributes="AdditionalAttributes">@ChildContent</fluent-listbox>
}
else
{
    <DynamicComponent Type="@typeof(Option)" @attributes="AdditionalAttributes">
        @ChildContent
    </DynamicComponent>
}

@code
{
    [CascadingParameter(Name = nameof(ThemeName))] public string ThemeName { get; set; } = "Fast";

    [Parameter(CaptureUnmatchedValues = true)] public IDictionary<string, object> AdditionalAttributes { get; set; } = default!;

    [Parameter] public RenderFragment ChildContent { get; set; } = default!;

}