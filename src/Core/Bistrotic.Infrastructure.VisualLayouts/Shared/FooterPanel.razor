<div class="footer-panel">
	<div class="footer-panel-header">
		@HeaderContent
		<slot name="footer-panel-header"></slot>
	</div>
	<div class="footer-panel-content">
		@ChildContent
		<slot name="footer-panel-content"></slot>
	</div>
	<div class="footer-panel-footer">
		@FooterContent
		<slot name="footer-panel-footer"></slot>
	</div>
</div>



@code {


	[Parameter]
	public RenderFragment? ChildContent { get; set; }
	[Parameter]
	public RenderFragment? HeaderContent { get; set; }
	[Parameter]
	public RenderFragment? FooterContent { get; set; }
}
